<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android" >

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:gravity="center_vertical" 
		android:padding="5dp">

		<ImageView android:src="@drawable/bike_activity_title_icon" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</ImageView>

		<TextView android:id="@+station/name" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20sp" android:paddingLeft="5dp"
            style="@style/BikeStationHeader">
		</TextView>

	</LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content" android:orientation="horizontal">
	
		<ImageButton android:layout_alignParentLeft="true"
			android:layout_centerHorizontal="true" android:layout_width="fill_parent"
			android:layout_height="48dp" android:layout_weight="1" />
	
		<ImageButton android:layout_centerInParent="true"
			android:layout_centerHorizontal="true" android:layout_width="fill_parent"
			android:layout_height="48dp" android:layout_weight="1" />
	
		<ImageButton android:layout_alignParentRight="true"
			android:layout_centerHorizontal="true" android:layout_width="fill_parent"
			android:layout_height="48dp" android:layout_weight="1" />
        
    </LinearLayout>
    
    <TableLayout android:layout_margin="5dp"
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:stretchColumns="1">
        
	    <TableRow 
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content">
            
            <TextView android:id="@+bike_station/available_bikes"
                android:gravity="left"/>
            
            <TextView android:id="@+bike_station/available_slots"
                android:gravity="right"/>
	        
	    </TableRow>
	    
    </TableLayout>
    
    <ProgressBar android:id="@+id/bikes_slots_status" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        style="?android:attr/progressBarStyleHorizontal">
    </ProgressBar>




</LinearLayout>
