<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itr="http://schemas.android.com/apk/res/fr.itinerennes"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
    android:orientation="vertical">
	
    <!-- START TITLE BAR -->
    <LinearLayout android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/toolbar_top_height"
        android:background="@android:drawable/title_bar"
        android:gravity="center_vertical">
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/activity_title_search_results"
            android:textSize="@dimen/toolbar_text_size"
            android:gravity="center_vertical"
            android:textColor="@color/white"/>
            
    </LinearLayout>
    <!-- END TITLE BAR -->
    
	<ListView android:id="@+id/search_results_list" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" />
        
    <!-- "No search result results" - initial visibility=GONE -->
    <LinearLayout android:id="@+id/search_results_none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone">
        
        <ImageView android:src="@drawable/ic_no_results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_margin="5dp"/>
    
        <TextView android:id="@+id/search_results_no_results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
    </LinearLayout>
</LinearLayout>