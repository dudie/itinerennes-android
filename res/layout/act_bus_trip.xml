<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- START TITLE BAR -->
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@android:drawable/title_bar_tall"
        android:gravity="center_vertical">
        
        <ImageView android:id="@+activity_bus_route/route_icon" 
            android:layout_width="32dp"
            android:layout_height="32dp">
        </ImageView>
        
        <include layout="@layout/misc_toolbar_separator"/>
            
        <TextView android:id="@+activity_bus_route/route_name" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_weight="1"
            android:textSize="20sp" 
            android:paddingLeft="5dp">
        </TextView>
        
        <ImageView android:id="@+activity_bus_route/wheelchair_icon"
            android:src="@drawable/misc_handistar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:visibility="gone">
        </ImageView>
        
    </LinearLayout>
    <!-- END TITLE BAR -->
    
	<ListView android:id="@+activity_bus_route/list_route_stops" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical">
	</ListView>

</LinearLayout>
