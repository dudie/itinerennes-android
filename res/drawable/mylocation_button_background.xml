<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itr="http://schemas.android.com/apk/res/fr.itinerennes">
    
    <!-- CHECKED and FOCUSED -->
    <item android:state_checked="true" android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <solid android:color="#95000000" />
                    <stroke android:width="2dp" android:color="@color/orange" />
                </shape>
            </item>
            <item android:gravity="center"
                android:top="6dp"
                android:bottom="6dp"
                android:right="6dp"
                android:left="6dp">
                <bitmap android:src="@drawable/toolbar_mylocation_icon" />
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <solid android:color="@color/orange_translucent" />
                    <stroke android:width="2dp" android:color="@color/orange" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- CHECKED -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <solid android:color="#95000000" />
                    <stroke android:width="2dp" android:color="@color/orange" />
                </shape>
            </item>
            <item android:gravity="center"
                android:top="6dp"
                android:bottom="6dp"
	            android:right="6dp"
	            android:left="6dp">
                <bitmap android:src="@drawable/toolbar_mylocation_icon" />
            </item>
        </layer-list>
    </item>
    
    <!-- FOCUSED -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <solid android:color="#95000000" />
                    <stroke android:width="1dp" android:color="@color/black"/>
                </shape>
            </item>
            <item android:gravity="center"
                android:top="6dp"
                android:bottom="6dp"
                android:right="6dp"
                android:left="6dp">
                <bitmap android:src="@drawable/toolbar_mylocation_icon" />
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <solid android:color="@color/orange_translucent" />
                    <stroke android:width="1dp" android:color="@color/black"/>
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- default -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <solid android:color="#95000000" />
                    <stroke android:width="1dp" android:color="@color/black"/>
                </shape>
            </item>
            <item android:gravity="center"
                android:top="6dp"
                android:bottom="6dp"
                android:right="6dp"
                android:left="6dp">
                <bitmap android:src="@drawable/toolbar_mylocation_icon" />
            </item>
        </layer-list>
    </item>
</selector>


