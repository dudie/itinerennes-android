<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itr="http://schemas.android.com/apk/res/fr.itinerennes">

    <!-- CLICKABLE map box background -->
    <item itr:state_clickable="true">

		<selector>
            <!-- CLICKABLE && PRESSED -->
		    <item android:state_pressed="true">
		        <layer-list>
		            <item>
		                <shape android:shape="rectangle">
		                    <corners android:radius="10dp" />
		                    <solid android:color="#95000000" />
		                    <stroke android:width="2dp" android:color="@color/orange" />
		                </shape>
		            </item>
                    <item android:top="10dp" android:right="5dp">
		                <bitmap android:gravity="top|right" android:src="@drawable/arrow_right" />
		            </item>
		        </layer-list>
		    </item>
		    
		    <!-- CLICKABLE default -->
		    <item>
		        <layer-list>
		            <item>
		                <shape android:shape="rectangle">
		                    <corners android:radius="10dp" />
		                    <solid android:color="#95000000" />
		                    <stroke android:width="1dp" android:color="#ff000000" />
		                </shape>
		            </item>
		            <item android:top="10dp" android:right="5dp">
		                <bitmap android:gravity="top|right" android:src="@drawable/arrow_right" />
		            </item>
		        </layer-list>
		    </item>
		</selector>

    </item>

    <!-- DEFAULT map box background -->
    <item>
        <selector>
            <!-- PRESSED default -->
		    <item android:state_pressed="true">
		        <shape android:shape="rectangle">
		            <corners android:radius="10dp" />
		            <solid android:color="#95000000" />
		            <stroke android:width="2dp" android:color="@color/orange" />
		        </shape>
		    </item>
		    
            <!-- default -->
		    <item>
		        <shape android:shape="rectangle">
		            <corners android:radius="10dp" />
		            <solid android:color="#95000000" />
		            <stroke android:width="1dp" android:color="#ff000000" />
		        </shape>
		    </item>
		</selector>
    </item>
</selector>

