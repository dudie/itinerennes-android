<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:itr="http://schemas.android.com/apk/res/fr.itinerennes">
    <item>
        <level-list>
            <!-- ZOOM FAR AWAY zoom <= 14 -->
            <item android:maxLevel="14">
                <bitmap android:gravity="center" android:src="@drawable/ic_marker_bike_dot" />
            </item>
            
            <!-- MEDIUM ZOOM 14 < zoom <= 17 -->
            <item android:maxLevel="17">
                <bitmap android:gravity="center" android:src="@drawable/ic_marker_bike_lite" />
            </item>
   
            <!-- 17 < zoom  -->
            <item android:maxLevel="99">
                <bitmap android:gravity="center" android:src="@drawable/ic_marker_bike" />
            </item>
        </level-list>
    </item>
    <item
        android:bottom="15dp"
        android:left="15dp">
        <selector>
            <item itr:state_bookmarked="true"
                android:drawable="@drawable/ic_marker_star_small"/>
        </selector>
    </item>
</layer-list>