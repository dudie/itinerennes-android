<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>fr.itinerennes</groupId>
        <artifactId>itinerennes-parent</artifactId>
        <version>0.5.1_api4-SNAPSHOT</version>
    </parent>

    <artifactId>itinerennes-android</artifactId>
    <packaging>apk</packaging>

    <name>ItineRennes</name>
    <description>ItineRennes android application</description>

    <dependencies>
        <!-- BEGIN - PROVIDED DEPENDENCIES -->
        <dependency>
            <groupId>com.google.android</groupId>
            <artifactId>android</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
        </dependency>
        <!-- END - PROVIDED DEPENDENCIES -->

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>itinerennes-commons</artifactId>
        </dependency>

        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
        </dependency>
        <dependency>
            <groupId>org.acra</groupId>
            <artifactId>acra</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-itinerennes</artifactId>
        </dependency>
        <dependency>
            <groupId>org.osmdroid</groupId>
            <artifactId>osmdroid-itinerennes</artifactId>
        </dependency>
        <dependency>
            <groupId>fr.dudie</groupId>
            <artifactId>rennes-data-api</artifactId>
        </dependency>
        <dependency>
            <groupId>fr.dudie</groupId>
            <artifactId>nominatim-api</artifactId>
        </dependency>
        <dependency>
            <groupId>fr.dudie</groupId>
            <artifactId>onebusaway-api</artifactId>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>${basedir}/src</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                <artifactId>android-maven-plugin</artifactId>
                <configuration>
		            <!-- 
                      default assets directory is set to "target/generated-resources/assets" to let maven profiles 
                      overriding and filtering them
                    -->
                    <assetsDirectory>${project.build.directory}/generated-resources/assets</assetsDirectory>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <!-- DEVELOPMENT PROFILE -->
            <id>dev</id>
            <activation>
                <property>
                    <name>performRelease</name>
                    <value>!true</value>
                </property>
            </activation>
            <build>
                <resources>
                    <!-- development profile copies the "assets" folder content to "target/generated-resources/assets" -->
                    <resource>
                        <directory>${basedir}/assets</directory>
                        <targetPath>${project.build.directory}/generated-resources/assets</targetPath>
                        <filtering>false</filtering>
                    </resource>
                </resources>
            </build>
        </profile>
        <profile>
            <!-- RELEASE PROFILE -->
            <id>release</id>
            <activation>
                <property>
                    <name>performRelease</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <resources>
                    <resource>
                        <!-- 
                          release profile copies the "assets" folder content to "target/generated-resources/assets" 
                          except some files... 
                        -->
                        <directory>${basedir}/assets</directory>
                        <targetPath>${project.build.directory}/generated-resources/assets</targetPath>
                        <filtering>false</filtering>
                        <excludes>
                            <exclude>itinerennes.properties</exclude>
                            <exclude>slf4j.properties</exclude>
                        </excludes>
                    </resource>
                    <resource>
                        <!-- ... these files are copied from "etc/conf/prod" -->
                        <directory>${basedir}/etc/conf/prod</directory>
                        <targetPath>${project.build.directory}/generated-resources/assets</targetPath>
                        <filtering>false</filtering>
                        <includes>
                            <include>itinerennes.properties</include>
                            <include>slf4j.properties</include>
                        </includes>
                    </resource>
                </resources>
                <plugins>
                    <!-- there is an issue with JDK7 and maven-jarsigner-plugin, so java version is enforced to 1.6 when releasing -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-enforcer-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>enforce-java-version</id>
                                <goals>
                                    <goal>enforce</goal>
                                </goals>
                                <configuration>
                                    <rules>
                                        <requireJavaVersion>
                                            <version>[1.6,1.7)</version>
                                        </requireJavaVersion>
                                        <requireProperty>
                                            <property>versionCode</property>
                                            <regex>^\d+$</regex>
                                            <regexMessage>Property versionCode must be an integer</regexMessage>
                                        </requireProperty>
                                    </rules>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jarsigner-plugin</artifactId>
                        <configuration>
                            <removeExistingSignatures>true</removeExistingSignatures>
                            <archive>${project.build.directory}/${project.build.finalName}.apk</archive>
                            <keystore>${itinerennes.keystore.path}</keystore>
                            <storepass>${itinerennes.keystore.storepass}</storepass>
                            <keypass>${itinerennes.keystore.keypass}</keypass>
                            <alias>${itinerennes.keystore.alias}</alias>
                            <sigfile>CERT</sigfile>
                        </configuration>
                        <executions>
                            <!-- sign generated APK -->
                            <execution>
                                <id>signing</id>
                                <goals>
                                    <goal>sign</goal>
                                    <goal>verify</goal>
                                </goals>
                                <phase>package</phase>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                        <artifactId>android-maven-plugin</artifactId>
                        <configuration>
                            <sign>
                                <debug>false</debug>
                            </sign>
                            <manifestDebuggable>false</manifestDebuggable>
                            <manifestVersionCode>${versionCode}</manifestVersionCode>
                            <manifestVersionName>${project.version}</manifestVersionName>
                        </configuration>
                        <executions>
                            <!-- update the manifest file -->
                            <execution>
                                <id>manifestUpdate</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>manifest-update</goal>
                                </goals>
                            </execution>
                            <!-- zipalign the signed APK -->
                            <execution>
                                <id>alignApk</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>zipalign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
