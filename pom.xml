<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>fr.itinerennes</groupId>
    <artifactId>itinerennes-parent</artifactId>
    <version>0.6.2</version>
    <packaging>pom</packaging>

    <name>ItineRennes parent</name>
    <description>ItineRennes parent pom</description>

    <properties>
        <versionCode /><!-- Empty versionCode property to avoid recursivity issue if not set -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        
        <!-- dependencies versions -->
        <version.gson>2.1</version.gson>
        <version.acra>4.2.3</version.acra>
        <version.slf4j-api>1.6.1</version.slf4j-api>
        <version.slf4j-log4j12>1.6.1</version.slf4j-log4j12>
        <version.slf4j-itinerennes>1.1</version.slf4j-itinerennes>
        <version.osmdroid-itinerennes>1.0.1</version.osmdroid-itinerennes>
        <version.rennes-data-api>2.0</version.rennes-data-api>
        <version.nominatim-api>2.0</version.nominatim-api>
        <version.onebusaway-api>1.0</version.onebusaway-api>
    </properties>

    <modules>
        <module>commons</module>
        <module>itinerennes</module>
        <module>itinerennes-tests</module>
        <module>itinerennes-android-tests</module>
    </modules>

    <scm>
        <url>https://bugtracker.dudie.fr/itr-android/browse/tags/itinerennes-0.6.2</url>
        <connection>scm:svn:https://svn.itinerennes.fr/android/tags/itinerennes-0.6.2</connection>
        <developerConnection>scm:svn:https://svn.itinerennes.fr/android/tags/itinerennes-0.6.2</developerConnection>
    </scm>

    <ciManagement>
        <system>Jenkins</system>
        <url>https://dudie.ci.cloudbees.com/job/itinerennes</url>
    </ciManagement>

    <distributionManagement>
        <repository>
            <id>dudie-releases</id>
            <name>Dudie releases by Cloudbees</name>
            <url>dav:https://repository-dudie.forge.cloudbees.com/private/releases</url>
        </repository>
        <snapshotRepository>
            <id>dudie-snapshots</id>
            <name>Dudie snapshots by Cloudbees</name>
            <url>dav:https://repository-dudie.forge.cloudbees.com/private/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

    <repositories>
        <!-- Sonatype repositories to access fr.dudie snapshots and releases -->
        <repository>
            <id>sonatype-nexus-releases</id>
            <name>Sonatype Nexus Releases</name>
            <url>https://oss.sonatype.org/content/repositories/releases</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
        <repository>
            <id>sonatype-nexus-snapshots</id>
            <name>Sonatype Nexus Snapshots</name>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </repository>
	
        <!-- ACRA artifact releases repository hosted on project's GoogleCode -->
        <repository>
            <id>acra-releases</id>
            <name>ACRA releases by GoogleCode</name>
            <url>http://acra.googlecode.com/svn/repository/releases</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
	
        <!-- Dudie private repositories hosted by Cloudbees -->
        <repository>
            <id>dudie-releases</id>
            <name>Dudie releases by Cloudbees</name>
            <url>https://repository-dudie.forge.cloudbees.com/private/releases</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
        <repository>
            <id>dudie-snapshots</id>
            <name>Dudie snapshots by Cloudbees</name>
            <url>https://repository-dudie.forge.cloudbees.com/private/snapshots</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <!-- Dudie private repository hosts one custom plugin used at release time -->
            <id>dudie-releases</id>
            <name>Dudie releases by Cloudbees</name>
            <url>https://repository-dudie.forge.cloudbees.com/private/releases</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </pluginRepository>
        <pluginRepository>
            <!-- Beardedgeeks repository hosts properties-merge plugin -->
            <id>beardedgeeks-googlecode</id>
            <name>Beardedgeeks GoogleCode Repository</name>
            <url>https://beardedgeeks.googlecode.com/svn/repository/releases</url>
            <releases>
                <enabled>true</enabled>
            </releases>
        </pluginRepository>
    </pluginRepositories>

    <dependencyManagement>
        <dependencies>
            <!-- BEGIN - PROVIDED DEPENDENCIES -->
            <dependency>
                <groupId>com.google.android</groupId>
                <artifactId>android</artifactId>
                <version>2.3.3</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>com.google.android</groupId>
                <artifactId>android-test</artifactId>
                <version>2.3.3</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>commons-logging</groupId>
                <artifactId>commons-logging</artifactId>
                <version>1.1.1</version>
                <scope>provided</scope>
            </dependency>
            <!-- END - PROVIDED DEPENDENCIES -->

            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>itinerennes-commons</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>itinerennes-android</artifactId>
                <version>${project.version}</version>
                <type>apk</type>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>itinerennes-android</artifactId>
                <version>${project.version}</version>
                <classifier>with-assets</classifier>
                <scope>provided</scope>
            </dependency>

            <dependency>
                <groupId>com.google.code.gson</groupId>
                <artifactId>gson</artifactId>
                <version>${version.gson}</version>
            </dependency>
            <dependency>
                <groupId>org.acra</groupId>
                <artifactId>acra</artifactId>
                <version>${version.acra}</version>
            </dependency>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>${version.slf4j-api}</version>
            </dependency>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-log4j12</artifactId>
                <version>${version.slf4j-log4j12}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-itinerennes</artifactId>
                <version>${version.slf4j-itinerennes}</version>
            </dependency>
            <dependency>
                <groupId>org.osmdroid</groupId>
                <artifactId>osmdroid-itinerennes</artifactId>
                <version>${version.osmdroid-itinerennes}</version>
            </dependency>
            <dependency>
                <groupId>fr.dudie</groupId>
                <artifactId>rennes-data-api</artifactId>
                <version>${version.rennes-data-api}</version>
            </dependency>
            <dependency>
                <groupId>fr.dudie</groupId>
                <artifactId>nominatim-api</artifactId>
                <version>${version.nominatim-api}</version>
            </dependency>
            <dependency>
                <groupId>fr.dudie</groupId>
                <artifactId>onebusaway-api</artifactId>
                <version>${version.onebusaway-api}</version>
            </dependency>
            
            <!-- test dependencies -->
            <dependency>
                <groupId>org.mockito</groupId>
                <artifactId>mockito-all</artifactId>
                <version>1.9.0</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <extensions>
            <!-- extension used to deploy releases and snapshots using webdav -->
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-webdav</artifactId>
                <version>1.0-beta-2</version>
            </extension>
        </extensions>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>1.0.1</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.2.1</version>
                <configuration>
                    <!-- Forward the "versionCode" property value to the maven instance building the release -->
                    <arguments>-DversionCode=${versionCode}</arguments>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <tagNameFormat>itinerennes-@{version}</tagNameFormat>
                </configuration>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>2.12</version>
                </plugin>
                <plugin>
                    <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                    <artifactId>android-maven-plugin</artifactId>
                    <version>3.1.0</version>
                    <configuration>
                        <sdk>
                            <platform>7</platform>
                        </sdk>
                        <undeployBeforeDeploy>true</undeployBeforeDeploy>
                    </configuration>
                    <extensions>true</extensions>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>2.5</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <version>2.7</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jarsigner-plugin</artifactId>
                    <version>1.2</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-source-plugin</artifactId>
                    <version>2.1.2</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-javadoc-plugin</artifactId>
                    <version>2.8</version>
                    <configuration>
                        <quiet>true</quiet>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-checkstyle-plugin</artifactId>
                    <version>2.8</version>
                    <configuration>
                        <configLocation>https://raw.github.com/kops/dudie-parent/master/etc/itinerennes-checks.xml</configLocation>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>
