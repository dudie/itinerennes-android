<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"
    android:paddingBottom="0dp"
    android:background="@drawable/map_box_background_clickable">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	       android:orientation="horizontal"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:gravity="center_vertical">
	       
	    <ImageView android:src="@drawable/bus_marker_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingRight="10dp"/>
	    
	    <TextView android:id="@+id/map_box_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:textSize="16sp"
	        style="@style/WhiteText"/>
	           
	    <ProgressBar android:id="@+id/map_box_progressbar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="5dp"
	        android:gravity="right"
	        android:visibility="gone"
	        style="@android:style/Widget.ProgressBar.Small" />
	
	   <ImageView android:id="@+id/map_box_wheelchair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:background="@drawable/handistar_icon"
            android:visibility="gone"/>
            
	    <ToggleButton android:id="@+id/map_box_toggle_bookmark"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="5dp"
	        android:gravity="right"
	        android:background="@drawable/btn_toggle_star"
	        android:textOn=""
	        android:textOff="" />
	        
	    <ImageView android:src="@drawable/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right"
	        />
	
	</LinearLayout>

    <include layout="@layout/line_icon_list" />

</LinearLayout>
