<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itr="http://schemas.android.com/apk/res/fr.itinerennes"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:id="@+id/main_layout">
	
	<fr.itinerennes.ui.views.ItinerennesMapView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/map"
		android:layout_centerInParent="true"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:clickable="true"
		android:layout_below="@+id/main_layout"
		tilesource="MapquestOSM"
		/>

    <ToggleButton
        android:id="@+id/mylocation_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_btn_mylocation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textOn=""
        android:textOff=""
        android:onClick="onMyLocationButtonClick"
        />
        
    <fr.itinerennes.ui.views.ItinerennesZoomControls
        android:id="@+id/zoom_controls" 
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" 
        itr:mapview="@+id/map"/>

	<fr.itinerennes.ui.views.MapBoxView
        android:id="@+id/map_box"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:visibility="gone"
		android:layout_margin="5dp">
	</fr.itinerennes.ui.views.MapBoxView>
	
	<LinearLayout 
        android:id="@+id/map_search_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#95000000"
        android:visibility="gone">
        
		<AutoCompleteTextView 
		    android:id="@+id/map_search_field"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="10dp"
            android:completionThreshold="4"
		    android:hint="@string/search_field_hint" />
		    
	</LinearLayout>
	
</RelativeLayout>