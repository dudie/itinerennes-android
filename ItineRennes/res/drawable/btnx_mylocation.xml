<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/bg_toolbar_button"/>
    <item>
        <selector>
            <!-- checked -->
            <item android:state_checked="true">
                <bitmap android:gravity="center" android:src="@drawable/btn_mylocation_on" />
            </item>
            
            <!--  default -->
            <item>
                <bitmap android:gravity="center" android:src="@drawable/btn_mylocation" />
            </item>
        </selector>
    </item>
</layer-list>