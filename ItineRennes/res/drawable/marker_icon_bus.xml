<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:itr="http://schemas.android.com/apk/res/fr.itinerennes">
    <item>
        <selector>
            <!-- PRESSED -->
            <item android:state_pressed="true">
                <layer-list>
                    <item android:drawable="@drawable/marker_selected_border"/>
                    <item>
                        <bitmap android:gravity="center" android:src="@drawable/bus_marker_icon" />
                    </item>
                </layer-list>
            </item>

            <!-- LOW ZOOMED -->
            <item itr:state_low_zoom="true">
                <bitmap android:gravity="center" android:src="@drawable/bus_marker_icon_lite" />
            </item>
   
            <!--  default -->
            <item>
                <bitmap android:gravity="center" android:src="@drawable/bus_marker_icon" />
            </item>
        </selector>
    </item>
    <item
        android:bottom="15dp"
        android:left="15dp">
        <selector>
            <item itr:state_bookmarked="true"
                android:drawable="@drawable/marker_overlay_star"/>
        </selector>
    </item>
</layer-list>